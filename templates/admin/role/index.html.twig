{% extends 'admin/base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}

    <div class="container">
        <h1>Role index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for role in roles %}
                <tr>
                    
                    <td>{{ role.title }}</td>
                    <td>
                        <a href="{{ path('admin_role_show', {'id': role.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('admin_role_edit', {'id': role.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_role_new') }}" class="btn btn-danger">Create new</a>
        
    </div>

    
{% endblock %}
