 {% set url = path('post_show',{'slug':post.slug})%}
       
      <div class="text-center">
            <h1 class="h3 mt-4">
             {% for category  in post.categories %}
             <a href="{{path('post_show_categorie', { id : category.id})}}" class="link_title" >
                  {{ category.name }} 
               
             </a>     
            {% endfor %}

            </h1>
            <h2 >{{post.title}}</h2>
            <p class=" comment_date"> {{post.createdAt | date('d-m-Y')}} -  <em>commentaires</em></p>
            <p >{{post.introduction | raw }}</p>

           
            <a href="{{url}}" > 
               <div class="btn btn-primary my-2 ">Lire la suite</div>
            </a>
             
         </div>
         
   
      
   