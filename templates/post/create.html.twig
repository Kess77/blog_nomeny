{% extends 'base.html.twig' %}
{% block title %} Création d'une annonce{% endblock %}
   
{% form_theme form _self %}

{% block body %}
{# champs de formulaire globale#}
    <div class="container my-4">
        {{form_start(form)}}

        {{form_widget(form)}}
        
        <button type="submit" class="btn btn-primary">Créer une nouvelle articles</button>
        {{form_end(form)}}
    </div>   
{% endblock %}

{# champs de formulaire  pour ajouter les images #}
{% block _post_images_widget %}
    <p>Vous pouvez ajouter des images </p>
    {{form_widget(form)}}
    <div class="form-group">
        <button type="button" class="btn btn-primary" id="add-image">Ajouter une image </button>
    </div>
{% endblock %}

{# le champs pour gérer les labels #}
{% block _post_images_entry_row %}
    {{form_widget(form)}}    
{% endblock %}

{# champs de sous formulaire qui seront ajouter au niveau de _post_images_widget #}
{% block _post_images_entry_widget %}
    <div class="form-group" id = "block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{form_widget(form.url)}}
                    </div>
                    <div class="col">
                        {{form_widget(form.caption)}}
                    </div>
                </div> 
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger "> <i class="fas fa-trash"></i></button>
            </div>
            
        </div>
    </div>
    
{% endblock %}

{# Gérer en javascript les champs pour ajouter ou supprimer les images #}

{% block javascripts %}
{{ parent() }}
    <script>
        $('#add-image').click(function(){
            //on récupère le numéro des futurs champs que je vais créer
            const index = $('#post_images div.form-group').length;

            //on récupère le prototype des entrées 
            const tmpl = $('#post_images').data('prototype').replace(/__name__/g, index);

            //on injecte ce code au sein de la div
            $('#post_images').append(tmpl);

            // le bouton por supprimer le champs on appelant la fonction 
            handleDeleteButtons();

        });
        function handleDeleteButtons (){
            $('button[data-action="delete"]').click(function(){
                //dataset = tous les attribits qui ont data
                //target = pour acceder au donnée data-target =>"#block_{id}"
                const target = this .dataset.target;
                
                $(target).remove();
            });
        }
            handleDeleteButtons();
    </script>
    
{% endblock %}