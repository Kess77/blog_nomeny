{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
{# Affichage des articles #}
<div class="container">
        <div class="row flex">
        {% for post in posts %}
            
            {% set url = path('post_show',{'slug':post.slug})%}
           
            <div class="col-8 my-2">
                <a href="{{url}}">
                    <img src="{{ post.coverImage }}" alt="" >
                </a>
                    <div class="text-center">
                        <h3 class="mt-4">Deco</h3>
                        <h2 >{{post.title}}</h2>
                        <p class=" comment_date"> {{post.createdAt | date('d-m-Y')}} -  <em>commentaires</em></p>
                        <p >{{post.article | raw }}</p>  
                        <a href="{{url}}">
                            <div class="btn btn-warning">Lire la suite</div>
                        </a>
                    </div>
               
            </div>
        {% endfor %}
           
            
        </div>
    </div>
{% endblock %}
